{% include "_header.twig" %}

	<div class="content p-home" role="content">

		{% setcontent slides = "slide/latest/4" %}

		{% if slides is not empty %}

			<div class="fullWidthTop">

				{% include "_slider.twig" with {'slides': slides} %}

			</div>

		{% endif %}

		<h2>{{ __("Latest entries") }}</h2>

		{% setcontent records = "entries/latest/6" allowpaging %}
		
		<div class="grid gridListing">

			{% for col in 0..2 %}

				<div class="small12 medium4">

					{% for record in records %}

						{% if (loop.index - 1) % 3 == col %}

							<article>

								<h3><a href="{{ record.link }}">{{ record.title }}</a></h3>

								{% if record.image!="" %}
									<a href="{{ record.link }}">
										<img src="{{ record.image|thumbnail(400, 200) }}" title="{{ image.title }}">

									</a>
								{% endif %}

								<p>{{ record.excerpt(300) }} <a href="{{ record.link }}">more</a></p>

								{% include "_recordfooter.twig" with {record: record} %}

							</article>

						{% endif %}

					{% endfor %}

				</div>

			{% endfor %}

		</div>

		{{ pager() }}

{% include "_footer.twig" %}