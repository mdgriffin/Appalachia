{% include '_header.twig' %}

	<div class="content p-home" role="content">

		<div class="fullWidthTop">

			<div class="pogoSlider p-home-slider" id="js-home-banner">

				{% setcontent slides = "slide/latest/4" %}

				{% for slide in slides %}

					{% set relatedslide = slide.related()|first %}

					<div class="pogoSlider-slide" style="background-image:url({{ slide.image|thumbnail(1200, 500) }});">
						
						<h2 class="pogoSlider-slide-element" data-in="slideLeft" data-out="slideRight" data-duration="400">
							
							{% if relatedslide is not empty %}
								<a href="{{ relatedslide.link }}">
							{% endif %}
							
								{{ slide.title }}
							
							{% if relatedslide is not empty %}
								</a>
							{% endif %}
						</h2>

						<h3 class="pogoSlider-slide-element" data-in="slideRight" data-out="slideLeft" data-duration="400">

							{% if relatedslide is not empty %}
									<a href="{{ relatedslide.link }}">
								{% endif %}
								
								{{ slide.subtitle }}
							
							{% if relatedslide is not empty %}
								</a>
							{% endif %}

						</h3>

					</div>

					
				{% endfor %}

			</div><!-- .pogoSlider -->

		</div>

		{% setcontent about = "block/home-page-about" %}

		<p>
			{{ about.body }}
		</p>

		<div class="p-home-news newsListing">

			<h2>Latest News</h2>

			<div class="grid">

				{% setcontent news = "news/latest/4" %}

				{% for newsItem in news %}

					<article class="small12 medium6 large3">

						<h3><a href="{{ newsItem.link }}">{{ newsItem.title }}</a></h3>

						{% if newsItem.image!="" %}
							<a href="{{ newsItem.link }}">
								<img src="{{ newsItem.image|thumbnail(400, 200) }}" title="{{ image.title }}">

							</a>
						{% endif %}

						{% include '_record_info.twig' with {record: newsItem} %}

						<p>{{ newsItem.excerpt(145) }}</p>

					</article>

				{% endfor %}

			</div>

		</div>

		<div class="p-home-events">
			
			<h2>Upcoming Events</h2>

			<table class="table">
			
				<thead>
					<tr>
						<th>Name</th>
						<th>Date</th>
						<th>Start Time</th>
						<th>Location</th>
					</tr>
				</thead>

				<tbody>
					
					{% setcontent events = "events/latest/4" allowpaging %}

					{% for event in events %}

						<tr>
							<td><a href="{{ event.link }}">{{ event.name }}</a></td>
							<td>{{ event.start_time|date('dS M Y') }}</td>
							<td>{{ event.start_time|date('g:ia') }}</td>
							<td>{{ event.location.address }}</td>
						</tr>

					{% endfor %}
				</tbody>

			</table>

		</div>

{% include '_footer.twig' %}