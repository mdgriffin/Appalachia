{% include '_header.twig' %}

	<h1>Events</h1>

	<div class="content p-eventListing" role="content">

		<table class="table">
			
			<thead>
				<tr>
					<th>Name</th>
					<th>Date</th>
					<th>Start Time</th>
					<th>Location</th>
				</tr>
			</thead>

			<tbody>
				
				{% setcontent events = "events/latest/10" allowpaging %}

				{% for event in events %}

					<tr>
						<td><a href="{{ event.link }}">{{ event.name }}</a></td>
						<td>{{ event.start_time|date('dS M Y') }}</td>
						<td>{{ event.start_time|date('g:ia') }}</td>
						<td>{{ event.location.address }}</td>
					</tr>

				{% endfor %}
			</tbody>

		</table>

		{{ pager() }}

{% include '_footer.twig' %}